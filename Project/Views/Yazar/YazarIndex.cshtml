@using MvcKutuphane.Models.Entity
@model List<Tbl_yazar>
@{
    ViewBag.Title = "YazarIndex";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>
<table  class="table table-striped">
    <tr>
        <th style="background-color:rgb(252, 178, 22)">ID</th>
        <th style="background-color: rgb(252, 178, 22)">AD</th>
        <th style="background-color: rgb(252, 178, 22)">SOYAD</th>
        <th style="background-color: rgb(252, 178, 22)">SİL</th>
        <th style="background-color: rgb(252, 178, 22)">GÜNCELLE</th>
        <th style="background-color: rgb(252, 178, 22)">YAZARIN KİTAPLARI</th>
    </tr>
    @foreach (var y in Model)
    {
        <tr>
            <td>@y.YazarID</td>
            <td>@y.YazarAd</td>
            <td>@y.YazarSoyad</td>
            <td>
                @Html.ActionLink("Sil", "YazarSil", new { id = y.YazarID }, new
                {
                    @class = "btn btn-danger",
           onclick = "return confirm('Silmek İstiyor Musunuz?')"
                })
            </td>
            <td><a href="/Yazar/YazarGetir/@y.YazarID" class="btn btn-warning">Güncelle</a></td>
            <td>
                <a href="/Yazar/YazarKitaplar/@y.YazarID" class="btn btn-default" style="background-color:lightcoral; color:white">
                    Yazarın Kitapları
                </a>
            </td>
        </tr>
}
</table>
<a class="btn btn-primary" href="/Yazar/YazarEkle/">Yeni Yazar Ekle</a>
