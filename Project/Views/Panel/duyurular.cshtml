@using MvcKutuphane.Models.Entity
@model List<Tbl_duyurular>
@{
    ViewBag.Title = "duyurular";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}
<h2>Duyurular</h2>
<table class="table table-bordered">
    <tr>
        <th>Kategori</th>
        <th>Tarih</th>
        <th>İçerik</th>
    </tr>
    @foreach (var kt in Model)
    {
        <tr>
            <td>@kt.kategori</td>
            <td>@Convert.ToDateTime(kt.tarih).ToString("dd/MM/yyyy")</td>
            <td>@kt.icerik</td>

        </tr>
    }

</table>
