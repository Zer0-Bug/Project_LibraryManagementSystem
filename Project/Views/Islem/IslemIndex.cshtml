@using MvcKutuphane.Models.Entity
@model List<Tbl_Hareket>
@{
    ViewBag.Title = "IslemIndex";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h2>İade Alınan Kitap Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>Üye İade Tarihi</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.HareketID</td>
            <td>@k.Tbl_kitap.KitapAd</td>
            <td>@k.Tbl_üyeler.ÜyeAd&nbsp @k.Tbl_üyeler.ÜyeSoyad</td>
            <td>@k.Tbl_personel.PersonelAdSoyad</td>
            <td>@Convert.ToDateTime(k.AlısTarih).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(k.UyeGetirmeTarih).ToString("dd/MM/yyyy")</td>
            <td>
                <a href="/Odunc/OduncIade/@k.HareketID" class="btn btn-danger"
                   style="background-color:darksalmon">Detaylar</a>
            </td>
        </tr>
    }
</table>
