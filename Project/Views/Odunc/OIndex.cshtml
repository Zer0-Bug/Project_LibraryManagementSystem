@using MvcKutuphane.Models.Entity
@model List<Tbl_Hareket>
@{
    ViewBag.Title = "OIndex";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h2>Ödünç Kitap Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th>İade Al</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.HareketID</td>
            <td>@k.Tbl_kitap.KitapAd</td>
            <td>@k.Tbl_üyeler.ÜyeAd&nbsp @k.Tbl_üyeler.ÜyeSoyad</td>
            <td>@k.Tbl_personel.PersonelAdSoyad</td>
            <td>@Convert.ToDateTime(k.AlısTarih).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(k.İadeTarih).ToString("dd/MM/yyyy")</td>
            <td>
                <a href="/Odunc/OduncIade/@k.HareketID" class="btn btn-danger"
                   style="background-color:darksalmon">Kitabı İade Et</a>
            </td>
        </tr>
    }
</table>
